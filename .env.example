# ModbusIM Configuration
# Copy this file to .env and adjust the values as needed

# Modbus RTU Configuration
MODBUS_PORT=/tmp/ptyp0
MODBUS_BAUDRATE=9600
MODBUS_PARITY=N
MODBUS_STOPBITS=1
MODBUS_BYTESIZE=8
MODBUS_TIMEOUT=1.0

# Modbus TCP Configuration (when using TCP mode)
MODBUS_TCP_HOST=0.0.0.0
MODBUS_TCP_PORT=5020

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Unit ID (Modbus slave address)
MODBUS_UNIT_ID=1
